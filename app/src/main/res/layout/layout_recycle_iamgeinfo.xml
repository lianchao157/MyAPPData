<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10x">

    <ImageView
        android:id="@+id/iv_shoptitle"
        android:layout_width="@dimen/dimen_120x"
        android:layout_height="@dimen/dimen_80y"
        android:layout_gravity="center"
        android:background="@mipmap/shangping3" />

    <TextView
        android:id="@+id/tv_shoptitlemoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_10x"
        android:text="￥300"
        android:textColor="@color/red"
        android:textSize="@dimen/dimen_30x" />

    <TextView
        android:id="@+id/tv_shoptitlemoney2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_10x"
        android:layout_marginBottom="@dimen/dimen_20x"
        android:text="￥200"
        android:textColor="@color/red"
        android:textSize="@dimen/dimen_20x" />


</LinearLayout>
