<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pager_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="121212121212"
                android:textSize="60px"
                android:visibility="gone" />


            <com.youth.banner.Banner
                android:id="@+id/banner_recent"
                android:layout_width="match_parent"
                android:layout_height="300px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:layout_marginTop="10px"
                android:background="@drawable/shape_corner_down"
                app:indicator_height="20dp"
                app:indicator_width="20dp"></com.youth.banner.Banner>
            <!--滑动菜单进度条-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="40px"
                android:layout_marginTop="20px"
                android:background="@drawable/border_gray"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fragment_blank_rv"
                    android:layout_width="match_parent"
                    android:layout_height="220px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="40px"></android.support.v7.widget.RecyclerView>

                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="68dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#ddd">

                    <View
                        android:id="@+id/v"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:background="@color/red" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="京东秒杀"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/showtiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0点场" />

                <TextView
                    android:id="@+id/showtiem1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00：09" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="170px"
                    android:text="海天大牌秒 >"
                    android:textColor="@color/red"
                    android:textSize="40px" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:background="#AA444444"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/id_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:padding="5px">

                <TextView
                    android:id="@+id/newgoods"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:background="@drawable/buttom_selector_bg"
                    android:drawableTop="@drawable/icon_bd_72"
                    android:text="小米11"
                    android:textColor="@color/white"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/supermak"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:background="@drawable/buttom_selector_bg"
                    android:drawableTop="@drawable/icon_bd_72"
                    android:text="超市盛典"
                    android:textColor="@color/white"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/outroomsport"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:background="@drawable/buttom_selector_bg"
                    android:drawableTop="@drawable/icon_bd_72"
                    android:text="户外运动"
                    android:textColor="@color/white"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/foodgoos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_weight="1"
                    android:background="@drawable/buttom_selector_bg"
                    android:drawableTop="@drawable/icon_bd_72"
                    android:text="食品礼盒"
                    android:textColor="@color/white"
                    android:textSize="40px" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_gray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="400px"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:background="@drawable/buttom_selector_bg">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            ></ListView>
                    <Button
                        android:id="@+id/allcityselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="36dp"
                        android:paddingLeft="10px"
                        android:text="全城购"
                        android:textColor="@color/black"
                        android:textSize="40px"
                     />

                    <Button
                        android:id="@+id/mytv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="135dp"
                        android:paddingRight="10px"
                        android:text="我的频道"
                        android:textColor="@color/black"
                        android:textSize="30px" />
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="center_vertical"
                    android:background="#AA444444"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/id_gallery1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"></LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20px">

                <activity.com.myappdata.widgets.ListViewVi
                    android:id="@+id/abase_lv"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/white" />

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlClassicsSpinnerStyle="Translate" />

            </com.scwang.smartrefresh.layout.SmartRefreshLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
